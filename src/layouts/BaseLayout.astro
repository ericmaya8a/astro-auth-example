---
import Head from "../components/Head.astro";
import Nav from "../components/Nav.astro";
import "../styles/main.css";

interface Props {
  title?: string;
}

const { title = "Astro" } = Astro.props;
---

<html lang="en">
  <Head title={title} />
  <body>
    <Nav />
    <main class="container mx-auto py-4">
      <h1 class="text-4xl font-bold">{title}</h1>
      <slot />
    </main>
  </body>
</html>
