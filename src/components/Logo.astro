---
import { Image } from "astro:assets";
import logoImage from "../assets/logo.webp";

interface Props {
  size?: "sm" | "md" | "lg";
}

const { size = "sm" } = Astro.props;

const className: { [key: string]: string } = {
  sm: "w-12",
  md: "w-16",
  lg: "w-20",
};
---

<div class={className[size]}>
  <Image
    class="rounded-full hover:shadow-md"
    src={logoImage}
    alt="logo"
    format="avif"
  />
</div>
